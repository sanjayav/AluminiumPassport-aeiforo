# Server Configuration
PORT=8081
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/aluminium_passport?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=aluminium_passport
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=30

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_HOURS=168

# Blockchain Configuration (Polygon)
WEB3_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
PRIVATE_KEY=your_private_key_here
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CHAIN_ID=137
GAS_LIMIT=300000
GAS_PRICE=20000000000

# For Polygon Mumbai Testnet:
# WEB3_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_PROJECT_ID
# CHAIN_ID=80001

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_infura_ipfs_project_id
IPFS_PROJECT_SECRET=your_infura_ipfs_project_secret
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# For local IPFS node:
# IPFS_API_URL=http://localhost:5001
# IPFS_GATEWAY_URL=http://localhost:8080/ipfs/
# IPFS_PROJECT_ID=
# IPFS_PROJECT_SECRET=

# Security Configuration
BCRYPT_COST=12
RATE_LIMIT_RPM=100
MAX_FILE_SIZE=52428800
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,https://yourdomain.com

# External Services
ESG_API_URL=https://api.esg-scoring.com/v1
ESG_API_KEY=your_esg_api_key_here
NOTIFICATION_URL=https://your-notification-service.com/webhook

# Feature Flags
ENABLE_ZK_PROOFS=true
ENABLE_AUDIT_LOGS=true
ENABLE_METRICS=true

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_ZIP_SIZE=104857600
ALLOWED_FILE_TYPES=.json,.csv,.xlsx

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@aluminiumpassport.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_external_integrations

# Cache Configuration
CACHE_TTL_MINUTES=60
CACHE_ENABLED=true

# API Rate Limits per Role
ADMIN_RATE_LIMIT=1000
CERTIFIER_RATE_LIMIT=500
MINER_RATE_LIMIT=200
VIEWER_RATE_LIMIT=100